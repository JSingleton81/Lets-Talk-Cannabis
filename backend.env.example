# Backend Environment Variables for Let's Talk Cannabis

# Persona Identity Verification
PERSONA_API_KEY=sk_test_your_actual_api_key_here
PERSONA_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# MySQL Database
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your_database_password
MYSQL_DATABASE=cannabis_db
MYSQL_PORT=3306

# Firebase Admin SDK
# Path to your Firebase service account JSON file
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Frontend URL (for push notification click actions)
FRONTEND_URL=http://localhost:3003
# Production: FRONTEND_URL=https://your-production-domain.com

# Server Config
PORT=5000
NODE_ENV=development

# Email Service (optional - for email notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
